@model PagedList.IPagedList<Model.EF.Table_Username>
@using PagedList.Mvc

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("Index", "Table_Username", FormMethod.Get, new { @class = "navbar-form navbar-right", role = "search", id = "search-form", onsubmit = "return empty();" }))
{
    <div class="form-group">
        <input type="text" class="form-control" placeholder="Tìm kiếm Phim" name="SearchTerm" value="@ViewBag.SearchTerm" id="search-box" style="width:161px;">

    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-default hidden-xs"><i class="glyphicon glyphicon-search"></i></button>
    </div>
}

@section head{
    Quản Lý Tài Khoản
}
<p>
    <button>@Html.ActionLink("Create New", "Create")</button>
</p>
<h2>Danh Sách Tài Khoản</h2>
<div style="overflow-x:auto;height:400px;  border: 1px solid blue">
    <table class="table table-bordered text-center">
        <tr class="text-center">
            <th class="text-center">
                NameUser
            </th>
            <th class="text-center">
                NgaySinh
            </th>
            <th class="text-center">
                GioiTinh
            </th>
            <th class="text-center">
                SDT
            </th>
            <th class="text-center">
                Chucvu
            </th>
            <th class="text-center">
                ImageUser
            </th>
            <th class="text-center">
                Thao Tác
            </th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NameUser)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NgaySinh)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GioiTinh)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SDT)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Chucvu)
                </td>
                <td>
                    <img src="~/Content/image_webfim/@item.ImageUser" style="width:80px; height:70px;" />
                </td>
                <td>
                    <button>@Html.ActionLink("Xem Chi Tiết", "Details", new { id = item.IDUserName }) </button>
                    <button>@Html.ActionLink("Xóa", "Delete", new { id = item.IDUserName })</button>


                </td>
            </tr>
        }

    </table>
</div>
<div style="float:right ">
    @Html.PagedListPager(Model, page => Url.Action("Index",
    new { page, @searchTerm = @ViewBag.SearchTerm }))
</div>
