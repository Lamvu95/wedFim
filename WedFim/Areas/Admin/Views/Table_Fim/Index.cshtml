@model IEnumerable<Model.EF.Table_Fim>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


@section head{
    TRANG CHÍNH
}
<p>
    <button>@Html.ActionLink("Create New", "Create")</button> 
</p>
<div style="overflow-x:auto;height:400px;  border: 1px solid blue">
    <table class="table table-bordered table">
        <tr>
            <th>
                Tên Phim
            </th>
            <th>
                Ảnh Phim
            </th>
            <th>
                Mã Thể Loại
            </th>

            <th>
                Đạo Diễn
            </th>
            <th>
                Năm Sản Xuất
            </th>
            <th>
                Nơi Sản Xuất
            </th>
            <th>
                Rating
            </th>
            <th>
                Người Up
            </th>

            <th>
                Link Phim
            </th>
            <th>
                Tác Vụ
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NameFim)
                </td>
                <td>
                    <img src="~/Content/image_webfim/@item.AnhPhim" style="width:50px; height:70px;" />

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IDTheLoai)
                </td>


                <td>
                    @Html.DisplayFor(modelItem => item.DaoDien)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NamSanXuat)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NoiSanXuat)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rating)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IDUserName)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.url)
                </td>
                <td>
                    <button>@Html.ActionLink("Edit", "Edit", new { id = item.IDFim })</button>
                    <button> @Html.ActionLink("Details", "Details", new { id = item.IDFim })</button>
                    <button> @Html.ActionLink("Delete", "Delete", new { id = item.IDFim })</button>
                </td>
            </tr>
        }

    </table>
</div>